# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=root_password_here
MAUTIC_DB_NAME=mautic
MAUTIC_DB_USER=mautic_user
MAUTIC_DB_PASSWORD=mautic_password_here
MAUTIC_DB_HOST=mautic-db
MAUTIC_DB_PORT=3306
DATABASE_DRIVER=pdo_mysql
DATABASE_CHARSET=utf8mb4

# Redis Configuration
REDIS_HOST=mautic-redis-1
REDIS_PORT=6379

# PHP Settings
PHP_MEMORY_LIMIT=512M
PHP_MAX_UPLOAD=100M
PHP_MAX_EXECUTION_TIME=600
PHP_INI_DATE_TIMEZONE=America/Sao_Paulo

# Mautic Application
MAUTIC_CACHING_BACKEND=redis
MAUTIC_URL=https://your-mautic-domain.com
DOCKER_MAUTIC_RUN_MIGRATIONS=true
DOCKER_MAUTIC_LOAD_TEST_DATA=false

# Traefik (if using)
TRAEFIK_DOMAIN=your-mautic-domain.com
